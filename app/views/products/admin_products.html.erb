<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">SKU</th>
        <th scope="col">Price</th>
        <th scope="col">Type</th>
        <th scope="col">Attributes</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.sku %></td>
          <td><%= product.price %></td>
          <td><%= product.sellable_type%></td>
          <% product.sellable.attributes.each do |attr| %>
            <% next if ["created_at","updated_at"].include? attr[0] %>
            <td>
              <strong><%= "#{attr[0]}:" %></strong>
              <p><%= "#{attr[1]}" %></p>
            </td>
          <% end %>
          <td>
            <%= image_tag 'http://placepuppy.net/100/100' if product.sellable.images.empty? %>
            <% product.sellable.images.each do |img| %>
              <%= image_tag img, height: 100 %>
            <% end %>
          </td>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <div class="card-group">
  <% @products.each do |product| %>
    <div class="card">
      <% if product.sellable.images.empty? %>
        <%= image_tag 'http://placepuppy.net/100/100' %>
      <% else %>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
          <% product.sellable.images.each do |img| %>
            <div class="carousel-item active">
              <%= image_tag img, height: 100 %>
            </div>
          <% end %>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= product.sellable.name %></h5>
        <p class="card-text"><%=product.sellable.description %></p>
        <dl>
          <dt>test</dt>
          <dd>data</dd>
        </dl>
      </div>
      <div class="card-footer">
        <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-sm btn-primary' %></td>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
      </div>
    </div>
  <% end %>
  </div>
</div>
